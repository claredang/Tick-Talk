<div class="container-fluid">
  <div class="row">
    <div class="col-3">
        <%= render 'form', room: Room.new %><br>
        <%# to create new room %>
        <% Room.all.each do |room| %>
          <%= link_to room, class: 'room-link' do %>
            <div class="card no-outline mb-2 room-card">
              <div class="card-body">
                <span class='name'><%= room.name %></span>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>
    <div class="col-7">
    <br>
    <p>Join Random Room to meet your new friend!</p>
    <br>
    <%= image_tag 'friend.svg', style: 'height:100%;width:auto;'%>
    </div>
  </div>
</div>



